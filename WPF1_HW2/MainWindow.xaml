<Window x:Class="WPF1_HW2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF1_HW2"
        mc:Ignorable="d"
        Title="Светофор" Height="450" Width="200">
    <Grid>
        <!-- Красный сигнал -->
        <Ellipse x:Name="RedLight"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Width="100" 
            Height="100" 
            Fill="Gray" 
            Stroke="Black" 
            StrokeThickness="2"
            Margin="0,0,0,280"/>

        <!-- Желтый сигнал -->
        <Ellipse x:Name="YellowLight" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Width="100" 
            Height="100" 
            Fill="Gray" 
            Stroke="Black" 
            StrokeThickness="2"
            Margin="0,0,0,30"/>

        <!-- Зеленый сигнал -->
        <Ellipse x:Name="GreenLight" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Width="100" 
            Height="100" 
            Fill="Gray" 
            Stroke="Black" 
            StrokeThickness="2"
            Margin="0,220,0,10"/>

        <!-- Кнопка переключения -->
        <Button x:Name="NextButton" 
           Content="Next" 
           Width="100" 
           Height="30" 
           Click="NextButton_Click"
           Margin="0,370,0,10"/>
    </Grid>
</Window>
